{
  "name": "sharp-tune",
  "version": "1.0.0",
  "description": "Lightweight Cross-platform music player build upon the node using the electron framework.",
  "main": "main.js",
  "dependencies": {
    "musicmetadata": "^2.0.5"
  },
  "devDependencies": {
    "electron": "^2.0.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "dmg": {
      "contents": [
        {
          "x": 100,
          "y": 150
        },
        {
          "x": 250,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Md. Azmal <azmalmd12@gmail.com>",
      "icon": "build/logo.png"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "author": "Md. Azmal",
  "license": "ISC"
}